---
import Layout from '../layouts/Base.astro';
import Photo from '../components/Photo.astro';
import mediaPhotos from '../data/photos.json';
import mediaLinks from '../data/links.json';
const links = mediaLinks;
const photos = mediaPhotos
---

<Layout title="Tech and Coffee graphics">
   <main>
      <article class="prose dark:prose-invert lg:prose-xl prose-h1:text-center prose-h2:text-center prose-a:text-blue-700 hover:prose-a:text-blue-900 visited:prose-a:text-purple-800 dark:prose-a:text-blue-300 dark:hover:prose-a:text-blue-500 dark:visited:prose-a:text-purple-500 prose-blockquote:border-blue-700 dark:prose-blockquote:border-blue-500">
         <h1>Tech and Coffee graphics</h1>
         <section>
            <h2>Graphics library</h2>
            <div class="columns-2">
               {mediaPhotos.photos.map((photo) => (
                  <Photo
							href={photo.url}
							title={photo.title}
                     description={photo.description}
                     inverted={photo.inverted}
                     download_url={photo.download_url}
						/>
               ))}
             </div>
         </section>
         <hr class="border-dashed dark:border-white my-6" />
         <section>   
            <h2 class="mb-3 text-2xl font-semibold">Media links</h2>
            {mediaLinks.links.map((option) => (
               <h3 class="mb-3 mt-3 text-lg font-semibold">{option.name}</h3>
               <ul class="list-inside list-disc ml-4">
                  {option.links.map((link) => (
                     <li>
                        <a href={link.url}>{link.name}</a>
                     </li>
                     ))}
               </ul>
            ))}
         </section>
      </article>
   </main>
</Layout>