---
import Layout from "../layouts/Base.astro";
import socialLinks from "../data/social.json";
const links = socialLinks;
---

<Layout title="Tech and Coffee">
	<main
		class="prose max-w-full dark:prose-invert lg:prose-xl prose-h1:text-center prose-h2:text-center prose-a:text-blue-700 hover:prose-a:text-blue-900 visited:prose-a:text-purple-800 dark:prose-a:text-blue-300 dark:hover:prose-a:text-blue-500 dark:visited:prose-a:text-purple-500 prose-blockquote:border-blue-700 dark:prose-blockquote:border-blue-500"
	>
		<h1>Tech and Coffee</h1>
		<h2>A virtual water cooler for the world of tech</h2>
		<div class="container flex justify-center">
			<picture>
				<source
					srcset="/images/tac_logo_inverted.webp"
					media="(prefers-color-scheme: dark)"
				/>
				<img
					alt=""
					src="/images/tac_logo_hires.webp"
					class="w-[250px] h-[213px] md:w-[500px] md:h-[425px] mr-12 md:mr-18 lg:mr-28"
				/>
			</picture>
		</div>
		<section>
			<h2>Follow us on social media!</h2>
			<div class="flex space-x-4 justify-center">
				{
					links.networks.map((option) => (
						<a href={option.url} title={option.name}>
							<picture>
								<source
									srcset={option.darkIcon}
									media="(prefers-color-scheme: dark)"
								/>
								<img
									class="m-8 h-8 md:w-10 md:h-10"
									src={option.icon}
									alt=""
								/>
							</picture>
						</a>
					))
				}
			</div>
		</section>
	</main>
</Layout>
