---
export interface Props {
	title: string;
	href: string;
	body?: string;
}

const { href, title, body } = Astro.props as Props;
---

<a
	href={href}
	class="block p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-700 dark:border-gray-700 dark:hover:bg-gray-700"
>
	<h2
		class="mb-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white"
	>
		{title}
	</h2>
</a>
